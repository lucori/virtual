{
    "session":{
        "num_gpus": 1,
        "gpus": "3",
        "experiment_name": "federated_exp_mnist"
    },
    "data_set":{
        "num_tasks": 5,
        "data_set_size_per_user": 1000,
        "test_set_size_per_user": 10000,
        "generator": "mnist"
    },
    "training":{
