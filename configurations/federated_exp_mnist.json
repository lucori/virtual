      "validation_split": 0.2,
      "verbose": 1
    },
    "model":{
      "num_samples": 10,
      "input_shape": [28,28,1],
      "layer": "DenseReparameterizationPriorUpdate",
      "layer_units": [100, 100, 10],
      "activations": ["relu", "relu", "softmax"]
    }
